@using PersonelCvPage.Models.Entity
@model List<Certification>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3 class="text-center">Certification Page</h3>
<br />
<body>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <span class="bg-primary">
                                                @item.Date
                                            </span>
                                        </div>
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Description
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Certification/EditCertificate/@item.ID" class="btn btn-primary btn-sm">Edit</a>
                                                    <a href="/Certification/DeleteCertificate/@item.ID" class="btn btn-danger btn-sm">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                        <br />
                                        <br />
                                    }
                                </div>
                                <div class="timeline timeline-inverse">
                                    <div>
                                        <div class="timeline-item">
                                            <div class="timeline-body">
                                                <a href="/Certification/AddCertificate" class="btn btn-dark">Add New Certificate</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
