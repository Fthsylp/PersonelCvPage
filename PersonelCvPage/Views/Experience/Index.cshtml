@using PersonelCvPage.Models.Entity
@model List<Experience>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<h2 class="text-center">Experience List</h2>

<br />

@if (Model.Count == 0)
{
    <p>No experiences to display.</p>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>SubTitle</th>
            <th>Date</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>@item.Date</td>
                <td><a href="/Experience/DeleteExp/@item.ID" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a></td>
                <td><a href="/Experience/ShowExp/@item.ID" class="btn btn-info"><i class="fas fa-pencil-alt"></i>Update</a></td>
            </tr>
        }
    </table>
}

<a href="/Experience/AddExp/" class="btn btn-dark">New Experience</a>
