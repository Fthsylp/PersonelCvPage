@using PersonelCvPage.Models.Entity
@model List<Login>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 class="text-center">Users Admin Control Page</h2>
<br />


@if (Model.Count == 0)
{
    <p>No experiences to display.</p>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.Password</td>
                <td><a href="/Admin/DeleteUser/@item.ID" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a></td>
                <td><a href="/Admin/EditUser/@item.ID" class="btn btn-info"><i class="fas fa-pencil-alt"></i>Edit</a></td>
            </tr>
        }
    </table>
}

<a href="/Admin/NewUser/" class="btn btn-dark">New Admin User</a>
