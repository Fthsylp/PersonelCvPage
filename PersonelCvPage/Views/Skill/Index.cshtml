@using PersonelCvPage.Models.Entity
@model List<Skills>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string color = "";}
@{string labelColor = "";}

<br />
<h2 class="text-center">Skill List</h2>
<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">

                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Skill</th>
                                            <th>Progress (graph)</th>
                                            <th style="width: 40px">Progress</th>
                                            <th>Update</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Progress >= 0 && item.Progress <= 30)
                                            {
                                                color = "progress-bar bg-danger";
                                                labelColor = "badge bg-danger";
                                            }
                                            if (item.Progress >= 31 && item.Progress <= 60)
                                            {
                                                color = "progress-bar bg-warning";
                                                labelColor = "badge bg-warning";
                                            }
                                            if (item.Progress >= 61 && item.Progress <= 75)
                                            {
                                                color = "progress-bar bg-primary";
                                                labelColor = "badge bg-primary";
                                            }
                                            if (item.Progress >= 76 && item.Progress <= 90)
                                            {
                                                color = "progress-bar bg-success";
                                                labelColor = "badge bg-success";
                                            }
                                            if (item.Progress >= 91 && item.Progress <= 100)
                                            {
                                                color = "progress-bar bg-dark";
                                                labelColor = "badge bg-dark";
                                            }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Skills1</td>
                                                <td class="align-middle">
                                                    <div class="progress progress-xs">
                                                        <div class="@color" style="width: @item.Progress%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelColor">@item.Progress%</span></td>
                                                <td><a class="btn btn-warning btn-sm" href="/Skill/UpdateSkill/@item.ID"> <i class="fas fa-pencil-alt"></i>Update</a></td>
                                                <td><a class="btn btn-danger btn-sm" href="/Skill/DeleteSkill/@item.ID"> <i class="fas fa-trash"></i>Delete</a></td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                                <br />
                                <a href="/Skill/NewSkill/" class="btn btn-info">Add New Skill</a>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>